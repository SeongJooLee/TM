<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.boardComment">

	<!-- 테이블 컬럼하고 VO하고 1:1 맵핑했을 때 이름이 다르면 안됌. -->
	<resultMap id="commentResult" type="CommentVO">
		<result property="id" column="id" />
		<result property="content" column="content" />
		<result property="writeDate" column="writeDate" />
		<result property="travelNO" column="travelNO" />
		<result property="reviewNO" column="reviewNO" />
	</resultMap>

	<select id="selectAll" resultMap="commentResult">
		<![CDATA[ select * from comment ]]>
	</select>
	<select id="selectOne" resultType="CommentVO"> 
		SELECT id,content,writeDate,travelNO,reviewNO from comment where id=#{id}
	</select>
	<insert id="insert" parameterType="CommentVO">
		<![CDATA[ INSERT INTO COMMENT
			(ID, CONTENT, WRITEDATE, TRAVELNO, REVIEWNO)
			VALUES(#{id}, #{content}, #{writeDate} , #{travelNO}, #{reviewNO}) ]]>
	</insert>
	

	<update id="update" parameterType="CommentVO"> 
		UPDATE COMMENT SET content=#{content}, writeDate=#{writeDate},travleNO=#{travleNO},reviewNO=#{reviewNO} 
		WHERE id=#{id} 
	
	</update>
	<delete id="delete" parameterType="CommentVO"> 
		DELETE FROM COMMENT WHERE ID=#{id} 
	</delete>

</mapper>