<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="mapper.boardLikeyou">

	<!--  테이블 컬럼하고 VO하고 1:1 맵핑했을 때 이름이 다르면 안됌. -->
   <resultMap id="likeyouResult" type="LikeyouVO">
      <result property="likeCount" column="likeCount" />
      <result property="id" column="id" />
      <result property="travelNO" column="travelNO" />
      <result property="reviewNO" column="reviewNO" />
   </resultMap>
   
	<select id="selectAll" resultMap="likeyouResult">
		<![CDATA[ select * from likeyou]]>
	</select>
	
	<select id="selectOneTravel" resultType="LikeyouVO"> 
		SELECT likeCount,travelNO from LIKEYOU where travelNO=#{travelNO}
	</select>
	
	<select id="selectOneReview" resultType="LikeyouVO"> 
		SELECT likeCount,reviewNO from LIKEYOU where reviewNO=#{reviewNO}
	</select>
	
	<insert id="insertTravel" parameterType="LikeyouVO">
		<![CDATA[ INSERT INTO LIKEYOU
			(likeCount,travelNO,id)
			VALUES(#{likeCount},#{travelNO},#{id})]]>
	</insert>
	
	<insert id="insertReview" parameterType="LikeyouVO">
		<![CDATA[ INSERT INTO LIKEYOU
			(likeCount,reviewNO,id)
			VALUES(#{likeCount},#{reviewNO},#{id}) ]]>
	</insert>
	
	
	<update id="update" parameterType="LikeyouVO"> 
		UPDATE LIKEYOU SET likeCount=#{likeCount},travelNO=#{travelNO} 
		WHERE id=#{id} AND likeCount=#{likeCount} 
	
	</update>
	<delete id="delete" parameterType="LikeyouVO"> 
		DELETE FROM LIKEYOU WHERE id=#{id} 
	</delete>
</mapper>