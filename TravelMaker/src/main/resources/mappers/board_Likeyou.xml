<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="mapper.boardLikeyou">

	<!--  테이블 컬럼하고 VO하고 1:1 맵핑했을 때 이름이 다르면 안됌. -->
   <resultMap id="likeyouResult" type="LikeyouVO">
      <result property="likeCount" column="likeCount" />
      <result property="id" column="id" />
      <result property="travelNO" column="travelNO" />
      <result property="reviewNO" column="reviewNO" />
   </resultMap>
   
	<select id="selectAll" resultMap="likeyouResult">
		<![CDATA[ select * from likeyou]]>
	</select>
	
	<select id="selectOne" resultType="LikeyouVO"> 
		SELECT likeCount,id,travelNO,reviewNO from LIKEYOU where id=#{id}
	</select>
	<insert id="insert" parameterType="LikeyouVO">
		<![CDATA[ INSERT INTO LIKEYOU
			(likeCount, id,travelNO, reviewNO)
			VALUES(#{likeCount}, #{id}, #{travelNO} , #{reviewNO} ]]>
	</insert>
	

	<update id="update" parameterType="LikeyouVO"> 
		UPDATE LIKEYOU SET likeCount=#{likeCount},travelNO=#{travelNO} 
		WHERE id=#{id} AND likeCount=#{likeCount} 
	
	</update>
	<delete id="delete" parameterType="LikeyouVO"> 
		DELETE FROM LIKEYOU WHERE id=#{id} 
	</delete>
</mapper>