<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="mapper.boardEvent">

	<!--  테이블 컬럼하고 VO하고 1:1 맵핑했을 때 이름이 다르면 안됌. -->
   <resultMap id="eventResult" type="EventVO">
      <result property="eventNO" column="eventNO" />
      <result property="imagefileName" column="imagefileName" />
      <result property="id" column="id" />
      <result property="name" column="name" />
      <result property="price" column="price" />
      <result property="count" column="count" />
   </resultMap>
   
   <select id="selectAll" resultMap="eventResult">
		<![CDATA[ select * from eventproduct]]>
	</select>
	
	<select id="selectOne" resultType="EventVO"> 
		SELECT eventNO,imagefileName,id,name,price,count from EVENTPRODUCT where id=#{id}
	</select>
	<insert id="insert" parameterType="EventVO">
		<![CDATA[ INSERT INTO EVENTPRODUCT
			(eventNO, imagefileName, id, name, price,count)
			VALUES(#{eventNO}, #{imagefileName}, #{id} , #{name}, #{price}),#{count} ]]>
	</insert>
	

	<update id="update" parameterType="EventVO"> 
		UPDATE EVENTPRODUCT SET imagefileName=#{imagefileName}, name=#{name},price=#{price},count=#{count} 
		WHERE id=#{id} 
	
	</update>
	<delete id="delete" parameterType="EventVO"> 
		DELETE FROM EVENTPRODUCT WHERE ID=#{id} 
	</delete>

</mapper>